<FrameLayout
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_100"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/widget_margin">

        <TextView
            android:id="@+id/widget_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/card_padding"
            android:textColor="@color/light_blue_700"
            android:textSize="@dimen/title_size"
            android:text="My Car"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/card_padding"
            android:text="00"
            android:layout_below="@+id/widget_name_value"
            android:textColor="@color/light_blue_700"
            android:textSize="@dimen/ratio_text_size" />


        <TextView
            android:id="@+id/widget_ratio_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/widget_ratio"
            android:layout_below="@+id/widget_name_value"
            android:text="@string/report_ratio_unit"
            android:textColor="@color/light_blue_700"
            android:textSize="@dimen/ratio_text_size" />

    </RelativeLayout>

    <Button
        android:id="@+id/widget_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_add_button"
        android:layout_gravity="end|bottom"
        android:contentDescription="@string/widget_add_button"
        android:theme="@style/AppTheme.FlatButton" />

</FrameLayout>