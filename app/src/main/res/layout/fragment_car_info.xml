<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/container_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/card_padding"
        android:paddingTop="@dimen/card_padding">


        <LinearLayout
            android:id="@+id/car_info_data_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/car_info_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Car Name" />

            <TextView
                android:id="@+id/car_info_name_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..." />

            <TextView
                android:id="@+id/car_info_brand_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Car brand" />

            <TextView
                android:id="@+id/car_info_brand_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..." />

            <TextView
                android:id="@+id/car_info_plate_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="License plate" />

            <TextView
                android:id="@+id/car_info_plate_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..." />

            <Button
                android:id="@+id/car_info_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/car_info_edit_button"
                android:theme="@style/AppTheme.FlatButton" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/car_info_error_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/error_min_height"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="error"/>

        </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>